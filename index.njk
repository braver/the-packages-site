{% import "packages/macros.njk" as pack %}

<h1>
  <span class="counter" data-all="{{ collections.packages | length }}">
    {{ collections.packages | length }}
  </span>
  Packages
</h1>

<form name="search">
  <input type="text" autocomplete="off" name="search-field" placeholder="Search packages ...">
  <ul class="labels">
    {{ pack.labels(['linux','macos','windows'], ['language syntax','snippets','linting','auto-complete','color scheme','theme']) }}
  </ul>
</form>

<section name="newest">
  <h2>Newest</h2>
  <ul class="grid">
    {% for pkg in collections.newest_packages %}
      <li>
        {{ pack.card(pkg) }}
      </li>
    {% endfor %}
  </ul>
</section>

<section name="recent">
  <h2>Recently updated</h2>
  <ul class="grid">
    {% for pkg in collections.updated_packages %}
      <li>
        {{ pack.card(pkg) }}
      </li>
    {% endfor %}
  </ul>
</section>

<section name="result" style="display:none;">
  <h2>Results</h2>
  <ul class="grid"></ul>
  <button type="button" style="display:none;">More &hellip;</button>
</section>

{% import "packages/macros.njk" as pack %}
<template id="package-card">
  {{ pack.card({
    "name": "placeholder-name",
    "description": "placholder-description",
    "author": "placeholder-author",
    "stars": 666,
    "platforms": [],
    "labels": [],
    "permalink": "placeholder-permalink"
  }) }}
</template>

<script src="/static/index.js" type="module" async></script>

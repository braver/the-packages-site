{% import "packages/macros.njk" as pack %}

<h1>{{ collections.packages | length }} Packages</h1>

<form name="search">
  <input type="text" autocomplete="off" name="search-field" placeholder="Search for packages by name...">
  <div class="labels">
    <button type="button" class="platform platform-osx"value="platform:osx">macos</button>
    <button type="button" class="platform platform-windows" value="platform:window">windows</button>
    <button type="button" class="platform platform-linux" value="platform:linux">linux</button>

    <button type="button" value="label:language_syntax">language syntax</button>
    <button type="button" value="label:snippets">snippets</button>
    <button type="button" value="label:linting">linting</button>
    <button type="button" value="label:lsp">lsp</button>
    <button type="button" value="label:color_scheme">color scheme</button>
    <button type="button" value="label:theme">theme</button>
  </div>
</form>

<section name="newest">
  <h2>Newest</h2>
  <ul class="grid">
    {% for pkg in collections.newest_packages %}
      <li>
        {{ pack.card(pkg) }}
      </li>
    {% endfor %}
  </ul>
</section>

<section name="recent">
  <h2>Recently updated</h2>
  <ul class="grid">
    {% for pkg in collections.updated_packages %}
      <li>
        {{ pack.card(pkg) }}
      </li>
    {% endfor %}
  </ul>
</section>

<section name="result" style="display:none;">
  <h2>Results</h2>
  <ul class="grid"></ul>
</section>

{% import "packages/macros.njk" as pack %}
<template id="package-card">
  {{ pack.card({
    "name": "placeholder-name",
    "description": "placholder-description",
    "author": "placeholder-author",
    "platforms": [],
    "labels": [],
    "permalink": "placeholder-permalink"
  }) }}
</template>
<script src="/static/search.js"></script>

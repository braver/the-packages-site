{% macro card(pkg) %}
  <div class="card">
    <h2>
      <a href="/package/{{ pkg.name | preslug | slugify | url }}/index.html">
        {{ pkg.name }}
      </a>
    </h2>
    <p>by {{ pkg.author }}</p>

    <dl>
      <dt>downloads</dt>
      <dd>{{ [3,12,23,75,113,201] | random }}</dd>
      <dt>stars</dt>
      <dd>{{ [3,12,23,75,113,201] | random }}</dd>
    </dl>

    <ul class="labels">
      {% for release in pkg.releases -%}
        {% for platform in release.platforms -%}
          {% if platform != '*' %}
            <li class="platform platform-{{ platform }}">{{ platform | replace('osx', 'macos') }}</li>
          {% endif %}
        {%- endfor %}
      {%- endfor %}

      {% for label in pkg.labels | slice(0,5) -%}
        <li class="label">{{ label }}</li>
      {%- endfor %}
    </ul>
  </div>
{% endmacro %}

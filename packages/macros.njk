{% macro card(name, author, platforms, labels) %}
  <a href="/package/{{ name | preslug | slugify | url }}/index.html">
    <div class="card">
      <h2>{{ name }}</h2>
      <p>by {{ author }}</p>
      <dl>
        <dt>downloads</dt>
        <dd>{{ [3,12,23,75,113,201] | random }}</dd>
        <dt>stars</dt>
        <dd>{{ [3,12,23,75,113,201] | random }}</dd>
      </dl>

      {% set comma = joiner() %}
      {% for platform in platforms -%}
        {{ comma() }} {{ platform | replace('osx', 'macos') }}
      {%- endfor %}

      {% for label in labels -%}
        {{ comma() }} {{ label }}
      {%- endfor %}
    </div>
  </a>
{% endmacro %}

{% macro card(name, author, platforms, labels) %}
  <div class="card">
    <h2>
      <a href="/package/{{ name | preslug | slugify | url }}/index.html">
        {{ name }}
      </a>
    </h2>
    <p>by {{ author }}</p>

    <dl>
      <dt>downloads</dt>
      <dd>{{ [3,12,23,75,113,201] | random }}</dd>
      <dt>stars</dt>
      <dd>{{ [3,12,23,75,113,201] | random }}</dd>
    </dl>

    <ul class="labels">
      {% set comma = joiner() %}
      {% for platform in platforms -%}
        {% if platform != '*' %}
          <li class="platform platform-{{ platform }}">{{ platform | replace('osx', 'macos') }}</li>
        {% endif %}
      {%- endfor %}

      {% for label in labels | slice(0,5) -%}
        <li class="label">{{ label }}</li>
      {%- endfor %}
    </ul>
  </div>
{% endmacro %}

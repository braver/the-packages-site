{% macro card(name, author, platforms, labels) %}
  <div class="card">
    <h2>
      <a href="/package/{{ name | preslug | slugify | url }}/index.html">
        {{ name }}
      </a>
    </h2>
    <p>by {{ author }}</p>

    <dl>
      <dt>downloads</dt>
      <dd>{{ [3,12,23,75,113,201] | random }}</dd>
      <dt>stars</dt>
      <dd>{{ [3,12,23,75,113,201] | random }}</dd>
    </dl>

    <span class="labels">
      {% set comma = joiner() %}
      {% for platform in platforms -%}
        {{ comma() }} {{ platform | replace('osx', 'macos') }}
      {%- endfor %}

      {% for label in labels -%}
        {{ comma() }} {{ label }}
      {%- endfor %}
    </span>
  </div>
{% endmacro %}

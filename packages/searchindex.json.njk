---
permalink: "/packages/searchindex.json"
---
{% import "packages/macros.njk" as pack %}
[
{% for pkg in collections.minimal_packages -%}
  {
    "name": "{{ pkg.name }}",
    "description": "{{ pkg.description | nl2br | replace('\n', '') }}",
    "created_at": "{{ pkg.created_at or '1970-01-01 00:00:00' }}",
    "author": "{{ pkg.author }}",
    "stars": "{{ pkg.stars }}",
    "platforms": "{{ pkg.platforms | default([]) | join(",") }}",
    "labels": "{{ pkg.labels | default([]) | join(",") }}",
    "permalink": "/package/{{ pkg.name | urlencode }}/"
  }{{ "," if not loop.last }}
{%- endfor %}
]

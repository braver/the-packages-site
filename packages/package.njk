---
layout: layout.njk
permalink: "package/{{ pkg.name | preslug | slugify | url }}/index.html"
pagination:
  data: collections.packages
  size: 1
  alias: pkg
eleventyComputed:
  title: "{{ pkg.name }}"
---

{% import "packages/macros.njk" as pack %}

<h1 class="big">{{ pkg.name }}</h1>
<p class="description">{{ pkg.description }}</p>

<p>by {{ pkg.author }}</p>

{{ pack.labels(pkg.releases, pkg.labels) }}

{% if pkg.releases | length > 1 %}
  <h2>Versions</h2>
{% else %}
  <h2>Version</h2>
{% endif %}

{% for release in pkg.releases %}
  <p><a class="release" href="{{ release.url }}">{{ release.version }}</a>
  {% if release.sublime_text != "*" %}
    <span class="requirement">({{ release.sublime_text }})</span>
  {% endif %}
  <br>
  {{ release.date }}
  </p>
{% endfor %}

<h2>Links</h2>

<ul class="links">
  {% if not "packagecontrol.io" in pkg.homepage | lower and pkg.details != pkg.homepage %}
  <li>
    <a href="{{ pkg.homepage }}">{{ pack.logo('home') }} Website</a>
  </li>
  {% endif %}
  <li>
    <a href="{{ pkg.details }}">{{ pack.logo('repo') }} Repository</a>
  </li>
  <li>
    <a href="{{ pkg.readme }}">{{ pack.logo('file') }} README</a>
  </li>
  {% if pkg.issues %}
    <li>
    <a href="{{ pkg.issues }}">{{ pack.logo('bug') }} Issues</a>
  </li>
  {% endif %}
  {% if pkg.donate %}
    <li>
    <a href="{{ pkg.donate }}">{{ pack.logo('gift') }} Donate</a>
  </li>
  {% endif %}
</ul>
